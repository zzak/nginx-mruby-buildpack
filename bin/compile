#!/bin/sh

# This script receives three arguments:
# - BUILD_DIR
# - CACHE_DIR
# - ENV_DIR
#
# Inside `ENV_DIR` is a file for each of the application's config variables.
#
# After the `compile` script is executed, any changes made to `BUILD_DIR` will
# be packaged into the slug.

#set -e

echo 'Compiling..'

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

mkdir -p "$BUILD_DIR/vendor"

wget https://s3-external-1.amazonaws.com/heroku-buildpack-ruby/cedar-14/ruby-2.2.2.tgz
tar -xvzf ruby-2.2.2.tgz -C "$BUILD_DIR/vendor"
export PATH="$BUILD_DIR/vendor/bin:$PATH"

ruby -v
gem -v

cd "$BUILD_DIR/vendor"
git clone git://github.com/matsumoto-r/ngx_mruby.git

echo "
MRuby::Build.new do |conf|
  toolchain :gcc
  conf.gembox 'full-core'
  conf.gem :github => 'iij/mruby-io'
  conf.gem :github => 'iij/mruby-env'
  conf.gem :github => 'iij/mruby-dir'
  conf.gem :github => 'iij/mruby-digest'
  conf.gem :github => 'iij/mruby-process'
  conf.gem :github => 'iij/mruby-pack'
  conf.gem :github => 'iij/mruby-socket'
  conf.gem :github => 'mattn/mruby-json'
  conf.gem :github => 'mattn/mruby-onig-regexp'
  conf.gem :github => 'matsumoto-r/mruby-redis'
  conf.gem :github => 'matsumoto-r/mruby-vedis'
  conf.gem :github => 'matsumoto-r/mruby-sleep'
  conf.gem :github => 'matsumoto-r/mruby-userdata'
  conf.gem :github => 'matsumoto-r/mruby-uname'
  conf.gem '../mrbgems/ngx_mruby_mrblib'
end" > "ngx_mruby/build_config.rb"

cd ngx_mruby
git submodule init
git submodule update
sh build.sh
make install

# populate profile.d
PROFILE_PATH="$BUILD_DIR/.profile.d/path.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo "export PATH=\"vendor/bin:vendor/ngx_mruby/build/nginx/sbin:$PATH\"" >> $PROFILE_PATH

cd $BUILD_DIR
mkdir -p "$BUILD_DIR/conf"
mkdir -p "$BUILD_DIR/logs"
mkdir -p "$BUILD_DIR/tmp"

echo "
worker_processes  1;
error_log /app/logs/nginx.error.log;
events {
    worker_connections  200;
}

daemon off;
master_process off;

http {
    access_log  /app/logs/nginx.access.log;

    server {
        listen       80;
        server_name  localhost;
        client_body_temp_path /app/tmp;
        proxy_temp_path /app/tmp;

        # hello world example
        location / {
          mruby_content_handler_code '
            Nginx::rputs \"Hello #{Nginx::module_name}/#{Nginx::module_version} world!\"
          ';
        }

        location ~ \.rb$ {
            mruby_add_handler on;
        }
    }
}
" > "$BUILD_DIR/conf/nginx.conf"

exit 0
