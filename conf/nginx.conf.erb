worker_processes  1;
error_log /app/logs/nginx.error.log;
events {
    worker_connections  200;
}

<% ENV.keys.each do |key| %>
env <%= key %>;
<% end %>

daemon off;
master_process off;

http {
    access_log  /app/logs/nginx.access.log;

    server {
        listen      <%= ENV["PORT"] %>;
        server_name  localhost;
        client_body_temp_path /app/tmp;
        proxy_temp_path /app/tmp;
        fastcgi_temp_path /app/tmp;
        scgi_temp_path /app/tmp;
        uwsgi_temp_path /app/tmp;

        # hello world example
        location / {
          mruby_content_handler "/app/main.rb";
        }

        location ~ \.rb$ {
          root "/app";
          mruby_add_handler on;
        }
    }
}
